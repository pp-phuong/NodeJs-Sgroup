<!DOCTYPE html>
<footer>

    <head>
        <title><%= title %></title>
        <link rel='stylesheet' href='/public/stylesheets/style.css' />
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
            integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
            integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    </head>

    <body class="p-0 mh-100 " data-spy="scroll">
        <!-- navbar -->
        <% include ../partials/navbar %>
        <!-- end nav-bar  -->
        <div class="wrapper  d-flex  container">
            <div class="row">
                <!-- sideMenu -->
                <% include ../partials/sideMenu %>
                <!-- end sideMenu-->
                <div class="col-10 " id="">
                    <div class="container pt-5 pl-5 d-flex">
                        <h4 class="pr-3 font-weight-bold text-uppercase"> Product types </h4>
                        <button type="button" class="btn btn-warning pl-3" data-toggle="modal"
                            data-target="#addProductType">
                            Add Product type
                        </button>
                    </div>
                    <div class="container pt-3 pb-5 mb-5 pl-5">
                        <table class="table pt-2 pl-3 pr-3">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope='col'>Product ID</th>
                                    <th scope='col'>User create</th>
                                    <th scope='col'>Product type name </th>
                                    <th scope='col'>Creat at</th>
                                    <th scope='col'>Update at</th>
                                    <th scope='col'>Edit</th>
                                    <th scope='col'>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% product_types.forEach(product_type => { %>
                                <tr>
                                    <td><%= product_type.id %></td>
                                    <td><%= product_type.user_id %></td>
                                    <td><%= product_type.product_type_name %></td>
                                    <td class="text-primary">
                                        <%= moment(product_type.created_at).format('MMMM Do YYYY, h:mm:ss a') %></td>
                                    <td class="text-primary">
                                        <%= moment(product_type.updated_at).format('MMMM Do YYYY, h:mm:ss a') %></td>
                                    <td><button type="button" class="btn btn-primary" data-toggle="modal"
                                            data-target="#editModal<%= product_type.id %>">
                                            Edit
                                        </button></td>
                                    <td><button type="button" class="btn btn-danger" data-toggle="modal"
                                            data-target="#deleteModal<%= product_type.id %>">
                                            Delete
                                        </button></td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!--add product type Modal -->
        <div class="modal fade" id="addProductType" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add Product Type</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form action="/addProductType" method="POST">
                            <div class="box-body">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Product type name</label>
                                    <input type="text" class="form-control" name="product_type_name" placeholder="">
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">Add Product Type</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!--edit Modal -->
        <% product_types.forEach(product_type => { %>
        <form class="modal fade" id="editModal<%= product_type.id %>" role="form" method="POST"
            action="/editProductType/<%= product_type.id %>" enctype="application/x-www-form-urlencoded">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Edit product_type</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="box-body">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">product type name</label>
                                    <input type="text" class="form-control" name="product_type_name">
                                </div>
                            </div>
                            <div class="modal-footer">
                                <input type="hidden" name="_method" value="PUT">
                                <button type="submit" class="btn btn-primary">Update</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </form>
        <% }) %>
        <!--delete Modal -->
        <% product_types.forEach( product_type => { %>
        <form class="modal fade" id="deleteModal<%= product_type.id %>" role="form" method="POST"
            action="/deleteProductType/<%= product_type.id %>" enctype="application/x-www-form-urlencoded">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Delete product type</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Are you sure to delete this product type ?</label>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-primary">Delete</button>
                        </div>
        </form>
        <% }); %>
        <!-- /.container -->
        <!-- footer -->
        <% include ../partials/footer %>
        <!-- end footer -->
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
            integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
            integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
            crossorigin="anonymous"></script>
    </body>

</footer>